set echo 0

Begin
	Echo ""
	Echo "### UnmangleTool is no longer supported."
	Echo "###"
	Echo "### The MPW environment now includes the tool 'Unmangle' which is up-to-date"
	Echo "###    with many current C++ compilers and supports more command-line options" 
	Echo "###    and input from stdin. 'unmangle -help' will list its options;"
	Echo "###    'unmangle -verbose' will produce output like the old UnmangleTool tool."
	Echo "### This script has been provided to prevent the inadvertent use of"
	Echo "###    of the old tool, and may be deleted at any time."
	Echo ""
End >>dev:stderr

Exit "-1"
