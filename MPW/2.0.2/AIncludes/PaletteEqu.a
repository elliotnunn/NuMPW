pmDevices	EQU		$0008		; private				[long]
pmSeeds		EQU		$000C		; private				[long]
pmInfo		EQU		$0010		; ColorInfo's			[ciSize] * pmEntries
pmHdrSize	EQU		$0010		; size of Palette header

