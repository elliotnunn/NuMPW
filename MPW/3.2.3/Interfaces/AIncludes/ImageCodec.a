	size				EQU	*
						ENDR

CodecCompressParams 		RECORD 0
	sequenceID 				DS.L	1		; precompress,bandcompress 
	imageDescription		DS.L	1		; precompress,bandcompress 
	data 					DS.L	1
	bufferSize				DS.L	1
	frameNumber				DS.L	1
	startLine				DS.L	1
	stopLine				DS.L	1
	conditionFlags			DS.L	1
	callerFlags				DS.W	1
