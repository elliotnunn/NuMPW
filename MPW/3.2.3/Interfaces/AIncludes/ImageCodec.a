	sequenceID				DS.L	1			; predecompress,banddecompress 
	imageDescription 		DS.L	1			; predecompress,banddecompress 
	data 					DS.L	1
	bufferSize 				DS.L	1
	frameNumber				DS.L	1
	startLine 				DS.L	1
	stopLine 				DS.L	1
